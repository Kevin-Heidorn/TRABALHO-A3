name: Validate Commits

on:
  pull_request:
    branches:
      
main

jobs:
  validate-commits:
    runs-on: ubuntu-latest

    steps:
      
name: Checkout Repository
      uses: actions/checkout@v2

      
name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

      # Passo removido: Install Dependencies, pois não é necessário instalar timers-promises-polyfill

      
name: Validate Commits
      run: |
        node ./path/to/timers-promises-polyfill/index.js
        npx commitlint --from=main --to=HEAD
